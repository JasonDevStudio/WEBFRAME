        function formSubmit(){
            
            if(BrowserCheck()){

            if(!$("#Uname").val()){
                showMessage("系统提示","用户名不能为空,请输入用户名!",300,100,false,true);
                return false;
            }

            if(!$("#Upassword").val()){
                showMessage("系统提示","密码不能为空,请输入用户名!",300,100,false,true);
