        function GotoIndex(){
            window.parent.location = "@Url.Action("Main","Home")";
        }

        //<a target=_blank href='http://@(HttpContext.Current.Request.Url.Host)/IE8.rar'>IE8.0 下载地址 : 点此下载<a/>
