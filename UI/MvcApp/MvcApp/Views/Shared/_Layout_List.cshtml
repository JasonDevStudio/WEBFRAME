@{
    ViewBag.Title = "_Layout_List";
    Layout = "~/Views/Shared/_Layout_main.cshtml";
}

@section Styles{
<link href="@Url.Content("~/Scripts/JasonPager/default.css")" rel="stylesheet" type="text/css" />
   @RenderSection("Styles", required: false) 
}
@RenderBody()
@section Scripts{
<script src="@Url.Content("~/Scripts/JasonPager/JasonPager.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            onWidthChange();

            $(window).resize(function () {
                onWidthChange();
            });

            $.JasonPager.Load({
                pagerActionUrl: $("#MainForm").action
            });
        });

        function Search() {
            $.JasonPager.Submit();
        }

        function onWidthChange() {
            var swidth = $(window).width();

            if (swidth <= 1000) {
                $("#portlet_body_main").width = "780px";

                $("[data-name='form_group_left']").each(function () {
                    $(this).attr("class", "col-md-5 control-label");
                });

                $("[data-name='form_group_right']").each(function () {
                    $(this).attr("class", "col-md-7");
                });
            } else if (swidth > 1000 && swidth < 1200) {
                $("#portlet_body_main").width = "99%";
                //$("#portlet_body_main").removeAttr("style");

                $("[data-name='form_group_left']").each(function () {
                    $(this).attr("class", "col-md-5 control-label");
                });

                $("[data-name='form_group_right']").each(function () {
                    $(this).attr("class", "col-md-7");
                });
            } else if (swidth > 1200) {
                $("#portlet_body_main").width = "99%";

                $("[data-name='form_group_left']").each(function () {
                    $(this).attr("class", "col-md-3 control-label");
                });

                $("[data-name='form_group_right']").each(function () {
                    $(this).attr("class", "col-md-9");
                });
            }
        }
        

    </script>
@RenderSection("Scripts", required: false) 
}
