@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Library.Models.PowerSystemModels
@using Library.Common
@using Library.StringItemDict

@section Styles{
    @RenderSection("Styles", required: false)
    
}

<!-- BEGIN BODY -->
<body class="page-header-fixed">
    <!-- BEGIN HEADER -->
    <div class="header navbar navbar-inverse navbar-fixed-top">
        <!-- BEGIN TOP NAVIGATION BAR -->
        <div class="header-inner">
            <!-- BEGIN LOGO -->
            <a class="navbar-brand" href="@Url.Action("Index", "Home")"> 
                <img src="@Url.Content("~/Content/Images/CLogo_w.png")" alt="logo" class="img-responsive">
            </a>
            <!-- END LOGO -->
            <!-- BEGIN RESPONSIVE MENU TOGGLER -->
            <a href="javascript:;" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" >
                <img src="@Url.Content("~/Content/Images/menu-toggler.png")" />
            </a>
            <!-- END RESPONSIVE MENU TOGGLER -->
            <!-- BEGIN TOP NAVIGATION MENU -->
            <ul class="nav navbar-nav pull-right">
                <!-- BEGIN USER LOGIN DROPDOWN -->
                <li class="dropdown user"><a href="#" class="dropdown-toggle" data-toggle="dropdown"
                    data-hover="dropdown" data-close-others="true">
                    <img alt="" src="@Url.Content("~/Content/Images/avatar1_small.jpg")">
                    <span class="username">@(((ModelSysUser)Session["UserInfo"])!=null?((ModelSysUser)Session["UserInfo"]).Fullname:"")
                    </span> <i class="fa fa-angle-down"></i>
                </a>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("LoginOut", "Login")"><i class="icon-key"></i>退出登录</a></li>
                    </ul>
                </li>
                <!-- END USER LOGIN DROPDOWN -->
            </ul>
            <!-- END TOP NAVIGATION MENU -->
        </div>
        <!-- END TOP NAVIGATION BAR -->
    </div>
    <!-- END HEADER -->
    <div class="clearfix">
    </div>
    <!-- BEGIN CONTAINER -->
    <div class="page-container">
        <!-- BEGIN SIDEBAR -->
         @Html.Action("Menu","Home")
        
        <!-- END SIDEBAR -->
        <!-- BEGIN PAGE -->
        
        <div class="page-content" id="divPageContent">
         @RenderBody()
           
        </div>
        <!-- END PAGE -->
    </div>
    <!-- END CONTAINER -->
    <!-- BEGIN FOOTER -->
    <div class="footer">
        <div class="footer-inner">
            Copyright &copy; 2014 华南物流有限公司 All Right Reserved.
        </div>
        <div class="footer-tools">
            <span class="go-top"><i class="fa fa-angle-up"></i></span>
        </div>
    </div>
    <!-- END FOOTER -->

    @section Scripts{
        <script type="text/javascript">
        $(function(){
            
        });

        function GotoIndex(){
            window.parent.location = "@Url.Action("Index", "Home")";
        }

        function GotoLogin(){
            window.parent.location = "@Url.Action("Index", "Login")";
        } 

        function GotoUrl(url){ 
                window.parent.location =url;
        }

        function OpenDetailPage(url,id,title) {
            //OpenPage(url+"?id="+id,title,1300,600); 
            window.open(url + "?id=" + id, title, "alwaysRaised=yes, height=600, width=1320, top=0,left=0, toolbar=no, menubar=no, scrollbars=yes, resizable=yes,location=no, status=no");
        }

    </script>
        
        @RenderSection("Scripts", required: false)
    }
    @Html.Raw((string)this.Session[Library.StringItemDict.BaseDict.CustomScript])
</body>
